{% block repayWrapper%}
    {#<h1>{{ loan.daysUntilNextPayment|abs }} {{ loan.expired }} {{ loan.status }}</h1>#}
    <div class="rollover-offer-wrapper">
        <div id="background-parallax">
            <div data-depth="0.2" class="layer-1"></div>
            <div data-depth="0.5" class="layer-2"></div>
        </div>
        <div class="container">
            <h2 class="rollover-heading">{{ '<b>Программа </b> </br> <strong>льготного</strong> погашения'|trans|raw }}</h2>
            <div class="amount-row">
                <h6>{{ 'Сегодня вы должны:'|trans }}</h6>
                <ul>
                    <li><span>{{ 'Тело кредита:'|trans }}</span><b class="credit-body">{{ loan.amount|format_float }}</b> {{ 'гривен'|trans }}</li>
                    <li><span>{{ '% по кредиту:'|trans }}</span><b class="credit-perc">{{ loan.totalToRepay|format_float - loan.amount|format_float}} </b> {{ 'гривен'|trans }}</li>
                    <li><span>{{ 'Общая сумма:'|trans }}</span><b class="repay-total">{{ loan.totalToRepay|format_float }}</b> {{ 'гривен'|trans }}</li>
                </ul>
            </div>
            <div class="offer-row">
                <ul>
                    <li><h6>{{ 'Мы спишем ваши долги за:'|trans }}</h6><b class="repay-total-discount">{{ (loan.amount|format_float*3 < loan.totalToRepay|format_float) ? loan.amount|format_float*3 : loan.amount|format_float*2}}</b> {{ 'гривен'|trans }}</li>
                    <li><h6>{{ 'Ваша Экономия:'|trans }}</h6><b class="repay-discount">{{ (loan.amount|format_float*3 < loan.totalToRepay|format_float) ? loan.totalToRepay|format_float - loan.amount|format_float*3 : loan.totalToRepay|format_float - loan.amount|format_float*2}} </b> {{ 'гривен'|trans }}</li>
                </ul>
            </div>
            <div class="text-right">
                <p><span class="star">*</span>{{ 'Мы отправляем отчет о Вас как о благонадежном заемщике и Ваш рейтинг растет.'|trans }}</p>
            </div>
            <div class="text-right">
                <img class="man-img" src="{{ asset('images/man-like.png') }}" alt="">
                <div class="text-block">
                    <h3>{{ 'Так же мы готовы  сразу выдать Вам новый кредит!'|trans }}</h3>
                    <h4>{{ 'Сashyou - с нами просто!'|trans }}</h4>
                </div>
            </div>
            <div class="phone-input-block">
                <p>{{ 'Если Вы согласны, введите телефон по которому можно с Вами связатся и нажмите <b>согласится</b> ниже'|trans|raw }}</p>
                <input type="tel" id="repay-input-phone" name="repay-input-phone" required="required" data-rule-phonevalidate="1" data-rule-phoneverified="1" placeholder="+38 (___) ___-__-__" data-mask="+38 (099) 999-99-99" minlength="19" maxlength="19" autocomplete="off">
            </div>
            <div class="button-block">
                <a href="" id ="btn-repay-close" class="button btn-repay-close">{{ 'В кабинет'|trans }}</a>
                <a href="" id="btn-repay-send" class="button">{{ 'Согласиться'|trans }}</a>
            </div>
        </div>
        <div class="form-hidden-block">
            <form id="repayOrder">
                <input type="text" name="repay-fullname" id="repay-fullname">
                <input type="text" name="repay-inn" id="repay-inn">
                <input type="text" name="repay-phone" id="repay-phone">
                <input type="text" name="profile-phone" id="profile-phone">
                <input type="text" name="expire-term" id="expire-term" value="{{ loan.daysUntilNextPayment|abs }}">
                <input type="text" name="expire-data" id="expire-data" value="{{ loan.nextPaymentDate|date('d.m.Y') }}">
                <input type="text" name="credit-body" id="credit-body">
                <input type="text" name="credit-perc" id="credit-perc">
                <input type="text" name="repay-total" id="repay-total">
                <input type="text" name="repay-total-discount" id="repay-total-discount">
                <input type="text" name="repay-discount" id="repay-discount">
            </form>
        </div>
    </div>

    <div id="repay-thank-message" class="repay-message">
        <div class="holder">
            <a class="message-closer"><i class="icon-close"></i></a>
            <h3>{{ 'Спасибо'|trans }}<i class="fa fa-smile-o" aria-hidden="true"></i></h3>
            <h6>{{ 'Наш менеджер свяжется с Вами в ближайшее время!'|trans }}</h6>
            <img class="man-img" src="{{ asset('images/man-like.png') }}" alt="">
            <section class="contacts-block">
                <p>{{ 'Вы так же можете получить детальную информацию позвонив нам по телефонам:'|trans }}</p>
                <div class="contacts-holder">
                    <div class="contacts-column">
